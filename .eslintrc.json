{
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "plugins": ["react"],
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "class-methods-use-this": "off",
    "prefer-destructuring": "off",
    "no-console": "off",
    "eqeqeq": "off",
    "semi": ["error", "never", { "beforeStatementContinuationChars": "always" }]
  }
}
